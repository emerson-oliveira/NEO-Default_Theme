@model DomainCheckout.Entities.Cart

@if (Model != null)
{
    if (Model.RecurringPurchaseCart != null && Model.RecurringPurchaseCart.Any() && Model.CartItems.Count(c => c.IsRecurrent) > 0)
    {
        <div class="compraRecorrenteSelectBox">
            <div class="ui warning message">
                <div class="header">
                    <div class="compraRecorrenteTitle">
                        <i class="calendar check outline icon"></i>
                        <span>Frequência de entrega</span>
                    </div>
                    <div class="compraRecorrenteSelect">
                        <select class="ui dropdown">
                            @{var firstSelectedRecurrentTime = Model.RecurringPurchaseCart.First();}
                            @foreach (var item in Model.RecurringPurchaseCart)
                            {
                                if (item.Equals(firstSelectedRecurrentTime))
                                {
                                    <option value="@item.IdCompraAutomaticaTipoEntrega" selected>@item.TipoEntrega</option>
                                }
                                else
                                {
                                    <option value="@item.IdCompraAutomaticaTipoEntrega">@item.TipoEntrega</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    }
}